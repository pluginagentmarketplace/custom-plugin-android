{
  "version": 1,
  "hooks": [
    {
      "id": "track-progress",
      "event": "user-command-submitted",
      "description": "Track user progress through learning path",
      "trigger": {
        "command": ["learn", "browse-agent", "assess", "projects"]
      },
      "actions": [
        {
          "type": "log",
          "message": "User accessed {command}"
        },
        {
          "type": "track-engagement",
          "metric": "plugin-usage"
        }
      ]
    },
    {
      "id": "learning-milestone",
      "event": "assessment-completed",
      "description": "Congratulate user on completing assessment",
      "actions": [
        {
          "type": "log",
          "message": "User completed assessment"
        }
      ]
    },
    {
      "id": "project-support",
      "event": "user-mentions-project",
      "description": "Provide project-specific help",
      "trigger": {
        "keywords": [
          "project",
          "building",
          "code",
          "error",
          "bug"
        ]
      },
      "actions": [
        {
          "type": "suggest-command",
          "command": "/projects"
        }
      ]
    },
    {
      "id": "performance-tips",
      "event": "user-asks-performance",
      "description": "Suggest performance optimization resources",
      "trigger": {
        "keywords": [
          "slow",
          "performance",
          "memory",
          "battery",
          "crash"
        ]
      },
      "actions": [
        {
          "type": "invoke-agent",
          "agent": "performance-optimization"
        }
      ]
    },
    {
      "id": "security-reminder",
      "event": "user-asks-security",
      "description": "Provide security best practices",
      "trigger": {
        "keywords": [
          "security",
          "encryption",
          "authentication",
          "data",
          "password"
        ]
      },
      "actions": [
        {
          "type": "invoke-agent",
          "agent": "security-deployment"
        }
      ]
    },
    {
      "id": "testing-suggestion",
      "event": "user-asks-testing",
      "description": "Suggest testing strategies",
      "trigger": {
        "keywords": [
          "test",
          "testing",
          "unit",
          "espresso",
          "mock",
          "bug"
        ]
      },
      "actions": [
        {
          "type": "invoke-agent",
          "agent": "testing-quality"
        }
      ]
    }
  ]
}
