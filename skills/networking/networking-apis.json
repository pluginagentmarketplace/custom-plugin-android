      "key_concepts": ["Pagination", "Caching", "Refreshing"]
    },
    {
      "title": "User Authentication System",
      "description": "Token-based authentication ile login/register sistemi",
      "difficulty": "Intermediate",
      "key_concepts": ["Token management", "Interceptors", "Refresh tokens"]
    },
    {
